
pipeline {
    agent any
    
    environment {
        ang_dir = 'angular'
        java_dir = 'java/jtqj'
    }
    tools{
        maven 'mvn'
        nodejs 'NodeJs'
    }
    stages {        
        stage('Build frontend') {
            steps {
                dir(ang_dir){
                    sh 'yarn --network-timeout 100000'
                    sh 'yarn install'
                    sh 'yarn build --configuration production'
                }
            }
        }
        stage('Test front') {
            steps {
                dir(ang_dir){
                    sh 'ng test'
                    sh 'ng lint'
                }
            }
        }
        stage('Build backend') {
            steps {
                dir(java_dir){
                    sh 'mvn clean install'
                    }
                }
            
        }
        stage('Test backend') {
            steps {
                dir(java_dir){
                    sh 'mvn clean test'
                }
            }
        }
        stage('SCM') {
            checkout scm
        }
        stage('SonarQube Analysis') {
            def mvn = tool 'mvn';
            withSonarQubeEnv() {
            sh "${mvn}/bin/mvn clean verify sonar:sonar -Dsonar.projectKey=jtq"
    }
  }
        stage ('Deploy') {
            steps {
                sh "docker-compose -f docker-compose.yml build"
                sh "docker-compose -f docker-compose.yml up -d"
            }
        }
    }
        
}
