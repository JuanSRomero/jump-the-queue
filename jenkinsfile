def gv
pipeline {
    agent any
    
    environment {
        ang_dir = 'angular'
        java_dir = 'java/jtqj'
    }
    stages {
        stage('init') {
          steps {
              script {
                  gv = load "script.groovy"
              }
          }
        }
        stage('Build frontend') {
            steps {
                echo 'Building frontend'
            }
        }
        stage('Build backend') {
            steps {
                dir(java_dir){
                    withMaven(maven: mvn){
                        sh "mvn clean test"
                    }
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                sh "docker-compose build"
                sh "docker-compose up -d"
            }
        }
    }
}