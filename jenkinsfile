
pipeline {
    agent any
    
    environment {
        ang_dir = 'angular'
        java_dir = 'java/jtqj'
    }
    tools{
        maven 'mvn'
    }
    stages {        
        stage('Build frontend') {
            steps {
                echo 'Building frontend'
            }
        }
        stage('Build backend') {
            steps {
                dir(java_dir){
                    sh 'mvn clean build'
                    }
                }
            }
        }
        stage('Test backend') {
            steps {
                dir(java_dir){
                    sh 'mvn clean test'
                }
            }
        }
        
    }
}