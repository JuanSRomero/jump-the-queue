
pipeline {
    agent any
    
    environment {
        ang_dir = 'angular'
        java_dir = 'java/jtqj'
    }
    tools{
        maven 'mvn'
        nodejs 'NodeJs'
    }
    stages {        
        stage('Build frontend') {
            steps {
                dir(ang_dir){
                    sh 'yarn --network-timeout 100000'
                    sh 'yarn install'
                    sh 'yarn build --prod'
                }
            }
        }
        stage('Test front') {
            steps {
                dir(ang_dir){
                    sh 'ng test'
                    sh 'ng lint'
                }
            }
        }
        stage('Build backend') {
            steps {
                dir(java_dir){
                    sh 'mvn clean install'
                    }
                }
            
        }
        stage('Test backend') {
            steps {
                dir(java_dir){
                    sh 'mvn clean test'
                }
            }
        }
        stage ('Deploy') {
            steps {
                sh "docker-compose build"
                sh "docker-compose up -d"
            }
        }
    }
        
}
