def gv
pipeline {
    agent any
    
    environment {
        ang_dir = 'angular'
        java_dir = 'java/jtqj'
    }
    stages {
        stage('init') {
          steps {
              script {
                  gv = load "script.groovy"
              }
          }
      }
        stage('Build frontend') {
            steps {
                echo 'Building frontend'
            }
        }
        stage('Build backend') {
            steps {
                script {
                  gv.buildBack()
              }
                
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                script{
                    gv.deployApp()
                }
                
            }
        }
    }
}